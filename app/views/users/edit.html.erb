<div class="h-full w-full pt-6 py-14 bg-[var(--secondary-color)]">
    <h1 class="w-full text-center text-6xl font-bold my-10 text-[var(--primary-color)]">Edit the User</h1>

    <%= render 'shared/errors', obj: @user %>
    <%= render 'form' %> 

    <div class="w-full flex items-center justify-center gap-2 my-6">
        <p class="text-xs cursor-pointer font-medium px-2 py-1 bg-blue-600 text-white rounded"><%= link_to "Add New User", signup_path() %></p>
        <p class="text-xs font-medium px-2 py-1 bg-yellow-600 text-white cursor-pointer rounded"><%= link_to "View", user_path(@user) %></p>
        <p class="text-xs font-medium px-2 py-1 bg-red-600 text-white cursor-pointer rounded"><%= link_to "Delete", user_path(@user), data: { turbo_method: :delete, turbo_confirm: "Are you sure, you want to delete this user ?" } %></p>
        <p class="text-xs font-medium px-2 py-1 bg-blue-600 text-white cursor-pointer rounded"><%= link_to "Back to Users", users_path %></p>
    </div>
</div>