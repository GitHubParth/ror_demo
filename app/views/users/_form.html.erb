<div class="max-w-[800px] shadow-lg w-full mx-auto bg-[var(--primary-color)] rounded-xl p-8 py-8 flex items-center justify-center">
    <%= form_with model: @user, local: true, class: 'w-full' do |f| %>
        <div class="h-auto mb-6 w-full relative">
            <p class="text-lg text-[var(--light-blue)] font-mono mb-1"><%= f.label :Username, "Username" %><br/></p>
            <%= f.text_field :Username, placeholder: "Enter Username", class: "border border-[var(--light-blue)] font-light text-lg rounded-lg px-3 bg-transparent !outline-none text-white tracking-wide w-full h-12" %>
        </div>
        <div class="h-auto mb-6 w-full relative">
            <p class="text-lg text-[var(--light-blue)] font-mono mb-1"><%= f.label :Email, "Email" %><br/></p>
            <%= f.text_field :Email, placeholder: "Enter Email", class: "border border-[var(--light-blue)] font-light text-lg rounded-lg px-3 bg-transparent !outline-none text-white tracking-wide w-full h-12" %>
        </div>
        <div class="h-auto mb-6 w-full relative">
            <p class="text-lg text-[var(--light-blue)] font-mono mb-1"><%= f.label :Password, "Password" %><br/></p>
            <%= f.password_field :Password, placeholder: "Enter Password", class: "border border-[var(--light-blue)] font-light text-lg rounded-lg px-3 bg-transparent !outline-none text-white tracking-wide w-full h-12" %>
        </div>
        <div class="border cursor-pointer mx-auto bg-[var(--secondary-color)] text-lg text-[var(--primary-color)] font-medium w-fit rounded-lg font-medium p-2 px-4 hover:-translate-y-0.5 transition-all duration-300">
            <%= f.submit %>
        </div>
    <% end %>
</div>