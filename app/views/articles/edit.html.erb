<h1 class="w-full text-center text-4xl font-bold my-10">Edit the Article</h1>

<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved : </h2>
    <ul><% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %></ul>
<% end %>

<div class="w-[500px] mx-auto border border-gray-400 rounded-md p-8 py-6 flex items-center justify-center">
    <%= form_with model: @article, local: true, class: 'w-full' do |f| %>
        <div class="h-14 mb-4 w-full">
            <p class="font-bold mb-1"><%= f.label :title, "Title" %><br/></p>
            <%= f.text_field :title, placeholder: "Enter Title", class: "border !outline-none px-2 p-1 rounded border-gray-400 w-full" %>
        </div>
        <div class="mb-2 w-full">
            <p class="font-bold mb-1"><%= f.label :description, "Description" %><br/></p>
            <%= f.text_area :description, placeholder: "Enter Description", class: "border !outline-none px-2 p-1 rounded border-gray-400 w-full" %>
        </div>
        <div class="border cursor-pointer mx-auto bg-blue-600 text-white text-xs font-medium w-fit rounded font-medium p-1.5 px-2.5 hover:bg-blue-800 transition-all duration-300">
            <%= f.submit %>
        </div>
    <% end %>
</div>

<div class="w-full flex items-center justify-center gap-2 my-6">
    <p class="text-xs cursor-pointer font-medium px-2 py-1 bg-blue-600 text-white rounded"><%= link_to "Add New Article", new_article_path() %></p>
    <p class="text-xs font-medium px-2 py-1 bg-yellow-600 text-white cursor-pointer rounded"><%= link_to "View", article_path(@article) %></p>
    <p class="text-xs font-medium px-2 py-1 bg-red-600 text-white cursor-pointer rounded"><%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure, you want to delete this article ?" } %></p>
    <p class="text-xs font-medium px-2 py-1 bg-blue-600 text-white cursor-pointer rounded"><%= link_to "Back to Articles", articles_path %></p>
</div>