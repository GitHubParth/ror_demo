<div class="h-full mt-32 my-16">
    <h1 class="w-full text-center text-4xl font-bold my-10">Edit the Article</h1>

    <%= render 'errors' %>
    <%= render 'form' %> 

    <div class="w-full flex items-center justify-center gap-2 my-6">
        <p class="text-xs cursor-pointer font-medium px-2 py-1 bg-blue-600 text-white rounded"><%= link_to "Add New Article", new_article_path() %></p>
        <p class="text-xs font-medium px-2 py-1 bg-yellow-600 text-white cursor-pointer rounded"><%= link_to "View", article_path(@article) %></p>
        <p class="text-xs font-medium px-2 py-1 bg-red-600 text-white cursor-pointer rounded"><%= link_to "Delete", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure, you want to delete this article ?" } %></p>
        <p class="text-xs font-medium px-2 py-1 bg-blue-600 text-white cursor-pointer rounded"><%= link_to "Back to Articles", articles_path %></p>
    </div>
</div>