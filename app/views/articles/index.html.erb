<h1 class="w-full text-center text-4xl font-bold my-10">List All Article</h1>

<table class="mx-auto">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td></td>
            </tr>
        <% end %>
    </tbody>
</table>